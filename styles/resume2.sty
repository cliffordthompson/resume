\newcommand{\resumeheader}[7]{\center\mbox{\Large\bf#1}\\\flushleft\mbox{#2}\hfill\mbox{{#6}}\\\vspace{0.01 cm}\mbox{#3}\hfill\mbox{{\bf}#5}\\\vspace{0.00 cm}\mbox{#4}\hfill\mbox{{#7}}\\\vspace{0.5 cm}\hrule}
\newcommand{\resumesection}[1]{\vspace{0.4 cm} \begin{large}  \textbf{#1} \end{large}\\}
\newcommand{\resumeeducation}[5]{\vspace{0.2 cm}\resumeindent{1 cm}\textbf{\textit{#1}}, #2\\\resumeindent{1 cm}#3\hspace{0.2in}{\small#4}\hfill(#5)\\}
\newcommand{\resumejob}[4]{\vspace{0.5 cm}\resumeindent{1 cm}\textbf{\textit{#1}}\\\resumeindent{1 cm}#2\hfill(#3)\\\vspace{0.2 cm}}
\newcommand{\resumeskill}[1]{\vspace{0.2 cm}\resumeindent{1 cm}\textbf{\textit{#1}}\\}
\newcommand{\resumeaward}[3]{\resumeindent{1 cm}\textbf{\textit{#1}} - {#2}\hfill(#3)\\}
\newcommand{\resumereference}[7]{\begin{minipage}[b]{5.5 cm}\textbf{\textit{#1}}\\#2\\#3\\ #4\\#5\\#6\\#7\\\end{minipage}}
\newcommand{\resumeproject}[4]{\vspace{0.3 cm}\resumeindent{1 cm}\textbf{\textit{#1}}\hfill(#3)\\\vspace{0.2 cm}\resumeindent{1 cm}\begin{minipage}[b]{15.5 cm}#4\end{minipage}\\}
\newcommand{\resumeindent}[1]{\hspace{#1}}
\newcommand{\resumebullet}[1]{\resumeindent{1.5 cm}$\cdot$ {#1}\\}
\newcommand{\rb}[1]{\resumebullet{#1}}
\newcommand{\resumehl}[1]{\textcolor{red}{#1}}
\newcommand{\resumeobjective}[1]{\begin{minipage}[b]{15 cm}#1\end{minipage}\\}
\newcommand{\resumeclearance}[2]{\resumeindent{1 cm}\textbf{\textit{#1}}\hfill(#2)\\}

\def\blfootnote{\xdef\@thefnmark{}\@footnotetext}

